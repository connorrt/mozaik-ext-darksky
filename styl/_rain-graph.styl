.rain__graph__container
  width 100%
  height 100%
  text-align center
  display block

  .label
    transform translateX(-50%) translateY(-20%)
    left 50%
    top 85%
    position absolute

  .chart
    width 80%
    height 70%
    display inline-flex
    background-color #151b26
    margin-top 1.5em
    border-radius 4px
    align-items flex-end

    .bar
      background-color #deb94f
      color deeppink
      width 1.6%

